{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ],
    "functions": {
        "server/api/index.ts": {
            "maxDuration": 10
        }
    },
    "crons": [
        {
            "path": "/api/cron/escalate",
            "schedule": "0 * * * *"
        }
    ]
}